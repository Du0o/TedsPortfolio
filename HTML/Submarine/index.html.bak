

 <!DOCTYPE html>
 <html lang="en">
 <head>
 <title>Tank Project</title>
 <style>
 canvas{
 border:4px solid black;
 display: block;
 margin: 0 auto;
 }
 </style>
 <link rel="stylesheet" href="style.css">
 <script language="javascript">

 //define our player object
 var onOff = 0 * 1;	
 var onOffBullet = 0 * 1;	
 var enemyLives = 3;	
 var dirDif = 0;	
 var loss = 0;
 
 let enemy= {
 x: 30,
 y: 30,
 radius: 30,
 speed: 2

 };
 let player= {
 x: 225,
 y: 450,
 radius: 30,
 speed: 10

 };
 let bullet= {
 x: 225,
 y: 400,
 radius: 10,
 speed: 10

 };
 window.addEventListener('keydown',handleKeyPress);
 
 function handleKeyPress(e){
	if(event.key === " ")
	 {
		onOffBullet = 1*1;
		dirDif = 0;
	 }

	 if(event.key === "ArrowLeft" || event.key === "a")
	 {
	 player.x -= player.speed;
	 if(onOffBullet == false){
	 bullet.x = player.x;
	 dirDif = -15;
	  }
	if(event.key === "ArrowUp" || event.key === "w")
	 {
	 player.y -= player.speed;
	 if(onOffBullet == false){
	 bullet.y = player.y;
	 dirDif = -15;
	  }
	 
	  
	 }
	 if(event.key === "ArrowRight" || event.key === "d")
	 {
	 player.x += player.speed;
	 if(onOffBullet == false){
	 bullet.x = player.x;
	 dirDif = 15;
	  }
	 if(event.key === "ArrowDown" || event.key === "s")
	 {
	 player.y += player.speed;
	 if(onOffBullet == false){
	 bullet.y = player.y;
	 dirDif = -15;
	  }
	 
	 }
	 
	 if(player.x > 495)
	{
		player.x -= 10;
		
	}
	if(player.x < 5)
	{
		player.x += 10;
		
	}
	 drawplayer();

 }

 //calls init first to set things up
 function init()
 {
 drawplayer();
 }
 function drawplayer()
 {
 //define canvas
 var canvas = document.getElementById("gameCanvas");
 var ctx = canvas.getContext("2d");

 //paint background color
 ctx.fillStyle="#000000";
 ctx.fillRect(0,0,500,500);
 
 

 ctx.beginPath();
 ctx.arc(player.x,player.y,player.radius,0,Math.PI*2);
 ctx.arc(player.x - 30,player.y + 15,player.radius/2,0,Math.PI*2);
 ctx.arc(player.x + 30,player.y + 15,player.radius/2	,0,Math.PI*2);
 ctx.fillStyle="lime";
 ctx.fill();
 ctx.beginPath();
 ctx.arc(player.x + dirDif,player.y,player.radius/1.5,0,Math.PI*2);
 ctx.fillStyle="white";
 ctx.fill();
 
 
 ctx.beginPath();
 ctx.arc(bullet.x,bullet.y,bullet.radius,0,Math.PI*2);
 ctx.fillStyle="yellow";
 ctx.fill();
 
 if(enemyLives > 0){
 
	 ctx.beginPath();
	 ctx.arc(enemy.x,enemy.y,enemy.radius,0,Math.PI*2);
	 ctx.fillStyle="red";
	 ctx.fill();
	 
	 
	 
 } else{
	 ctx.font = "30px Arial";
	 ctx.fillStyle = "blue";
	 ctx.fillText("You won!", canvas.width / 2, canvas.height / 2);
 }
 if(loss == 1){
	ctx.font = "30px Arial";
	 ctx.fillStyle = "blue";
	 ctx.fillText("You Lose", canvas.width / 2, canvas.height / 2);
 }
 
 
 
 }
	
 function Timer()
 {
	 if(onOff == false)
	 {
	 timer = setInterval("Move()",1);
	 
	 onOff = 1*1;
	 }
	 else if(onOff == true)
	  {
	 clearInterval(timer);
	 onOff = 0 * 1;
	 }
 }
 function Move(){
	window.addEventListener('keydown',handleKeyPress);
	if(onOffBullet == true){
		bullet.y -= bullet.speed;
	}
	
	if(bullet.y < 5){
		onOffBullet = 0 * 1;
		bullet.y = 400;
		bullet.x = player.x;
	}
	if(enemy.x > 495)
	{
		enemy.speed *= -1;
		enemy.y += 30;
	}
	if(enemy.x < 5)
	{
		enemy.speed *= -1;
		enemy.y += 30;
	}
	if(enemy.y > 350)
	{
		loss = 1;
		clearInterval(timer);
		onOff = 0 * 1;
		drawplayer();
	}
 
	enemy.x += enemy.speed;
	
	if(bullet.x + bullet.radius >= enemy.x && bullet.x <= enemy.x + enemy.radius && bullet.y + bullet.radius >= enemy.y && bullet.y <= enemy.y + enemy.radius){
		console.log("hit");
		onOffBullet = 0 * 1;
		bullet.y = 400;
		bullet.x = player.x;
		enemyLives -= 1;
	}
	
	drawplayer();
 }
 </script>

 </head>
 <body onload="init()">
 
 <center>
 <h1>Tank Project</h1>
 <canvas id="gameCanvas" width="500" height="500" style="border:2px solid rgb(195,195,195);">
 Doesn't support canvas attribute
 </canvas>
 <input type="button" name="Play" value="Move"
 onclick="Timer()"/>
 </center>
 
 </body>
 </html>